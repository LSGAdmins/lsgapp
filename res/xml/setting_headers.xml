<preference-headers xmlns:android="http://schemas.android.com/apk/res/android" >

    <header
        android:icon="@drawable/ic_settings_black"
        android:title="@string/change_user"
        android:summary="@string/change_user_summary" >
        <intent
            android:targetClass="com.lsg.app.SetupAssistant"
            android:targetPackage="com.lsg.app"
            android:action="changeUser" />
    </header>
    <header
        android:icon="@drawable/ic_timetable_black"
        android:title="@string/change_time_table"
        android:summary="@string/change_time_table_summary" >
        <intent
            android:targetClass="com.lsg.app.SetupAssistant"
            android:targetPackage="com.lsg.app"
            android:action="changeTimeTable" />
    </header>
    <header
        android:fragment="com.lsg.app.SettingsAdvanced$VPlanFragment"
        android:icon="@drawable/ic_vplan_black"
        android:summary="@string/vplan_summary"
        android:title="@string/vplan" />
    <header
        android:fragment="com.lsg.app.SettingsAdvanced$BlackWhiteListFragment"
        android:icon="@drawable/ic_blacklist"
        android:summary="@string/blacklist_summary"
        android:title="@string/blacklist" >
        <extra
            android:name="list"
            android:value="blacklist" />
    </header>
    <header
        android:fragment="com.lsg.app.SettingsAdvanced$BlackWhiteListFragment"
        android:icon="@drawable/ic_whitelist"
        android:summary="@string/whitelist_summary"
        android:title="@string/whitelist" >
        <extra
            android:name="list"
            android:value="whitelist" />
    </header>
</preference-headers>